<div>
	<div class="table-responsive">
		<form method="post" action="/adminUpdate" id="updateForm">
		<table class="table table-condensed">
			<thead>
				<tr>
					<th>Product</th>
					<th>Description</th>
					<th>Price</th>
					<th>In Stock</th>
					<th>Add Quantity</th>
					<th>Delete/Add<input type="radio" value=0 name=delete checked form="updateForm"></th>
				</tr>
			</thead>
			<tbody>
				{{#each data}}
					<tr>
						<td>{{this.name}}</td>
						<td>{{this.description}}</td>
						<td>{{this.price}}</td>
						<td>{{this.quantity}}</td>
						<td><input type="text" name={{this.id}} value=0 form="updateForm"></td>
						<td><input type="radio" value={{this.id}} name=delete form="updateForm"></td>
					</tr>
				{{/each}}
				<tr>
					<td>
						<input type="text" name=newProduct form="updateForm">
					</td>
					<td>
						<input type="text" name=newDescription form="updateForm">
					</td>
					<td>
						<input type="text" name=newPrice form="updateForm">
					</td>
					<td>
						<input type="text" name=newQuantity form="updateForm">
					</td>
					<td>
					</td>
					<td>
						<input type="radio" value=-1 name=delete form="updateForm">
					</td>
				</tr>
			</tbody>
			<tfooter>
				<tr>
				<td><input type="submit" value="Submit changes" form="updateForm"></td>
				</tr>
			</tfooter>
		</table>
		</form>
	</div>
</div>
