<div>
	<div class="table-responsive">
		<form method="post" action="/listProducts/add">
		<table class="table table-condensed">
			<thead>
				<tr>
					<th>Product</th>
					<th>Description</th>
					<th>Price</th>
					<th>In Stock</th>
					<th>Quantity to Order</th>
				</tr>
			</thead>
			<tbody>
				{{#each data}}
					<tr>
						<td>{{this.name}}</td>
						<td>{{this.description}}</td>
						<td>{{this.price}}</td>
						<td>{{this.quantity}}</td>
						<td><input type="text" name={{this.id}} value=0></td>
					</tr>
				{{/each}}
			</tbody>
			<tfooter>
				<tr>
				<td>Customer Name                  <input type="text" name=customer value=NULL></td>
				<td><input type="submit" value="Submit order"></td>
				</tr>
			</tfooter>
		</table>
		</form>
	</div>
</div>
